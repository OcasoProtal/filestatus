{
	"name": "pmfilestatus",
	"displayName": "FileStatus",
	"description": "Display various file properties in the status bar",
	"version": "1.0.0",
	"license": "GPL-3.0-or-later",
	"publisher": "ProtalMatter",
	"icon": "images/icon.png",
	"repository": {
		"type": "git",
		"directory": "https://github.com/OcasoProtal/filestatus.git"
	},
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onCommand:pmfilestatus.fileStatus"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "pmfilestatus.fileStatus",
				"title": "File Status"
			}
		],
		"configuration": {
			"title": "File Status",
			"properties": {
				"pmFileStatus.displayFileName": {
					"type": "boolean",
					"default": false,
					"description": "Display filename in the statusbar"
				},
				"pmFileStatus.displayFileSize": {
					"type": "boolean",
					"default": true,
					"description": "Display file size in the statusbar"
				},
				"pmFileStatus.displayFileModificationTime": {
					"type": "boolean",
					"default": true,
					"description": "Display modification time of the file in the statusbar"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.66.0",
		"@typescript-eslint/eslint-plugin": "^5.18.0",
		"@typescript-eslint/parser": "^5.18.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.0.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5"
	}
}
